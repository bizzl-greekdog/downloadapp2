<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <meta name="x-vapid-public-key" content="{{ benkle_notifications_public_key }}"/>
        <title>{% block title %}Download App{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('build/app.css') }}"/>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    </head>
    <body>
        <div id="wrapper">
            <nav class="navbar navbar-inverse navbar-static-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <span class="navbar-brand">{% block brand %}Download App{% endblock %}</span>
                    </div>
                    {% block navbar %} {% endblock %}
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                {{ knp_menu_render('settings', {'currentClass': 'active', 'template': 'menu/dropdown.html.twig'}) }}
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </nav>
            <main class="container-fluid">{% block body %}{% endblock %}</main>
        </div>
        <script src="{{ asset('build/app.js') }}"></script>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED")  %}
            <script src="{{ asset('bundles/benklenotification/register.js') }}"></script>
        {% endif %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
